{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": ["prettier", "rbac"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-console": "off",
    "no-process-exit": "off",
    "prefer-const": "warn",
    "no-var": "error",
    "rbac/require-authorize-middleware": "error",
    "rbac/use-role-groups": "warn"
  },
  "env": {
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "rbac": {
      "pluginPath": "../scripts/eslint-plugin-rbac"
    }
  }
}
