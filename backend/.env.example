# Database
DATABASE_URL="postgresql://ikaiuser:your_password@postgres:5432/ikaidb"

# JWT
JWT_SECRET="your-secret-jwt-key-change-this"
JWT_EXPIRATION="7d"

# Redis
REDIS_URL="redis://redis:6379"

# MinIO
MINIO_ENDPOINT="minio"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="your_minio_secret"
MINIO_BUCKET="ikai-cv-files"
MINIO_USE_SSL=false

# Email (Gmail)
GMAIL_USER="your-email@gmail.com"
GMAIL_APP_PASSWORD="your-16-char-app-password"

# Ollama
OLLAMA_BASE_URL="http://ollama:11434"

# Gemini API (for direct batch analysis)
GEMINI_API_KEY="your-gemini-api-key-from-google-ai-studio"
# Batch threshold: 3+ CVs will use direct Gemini API (cost optimization)
BATCH_THRESHOLD=3

# Milvus
MILVUS_HOST="milvus"
MILVUS_PORT=19530

# Backend
BACKEND_PORT=3001
NODE_ENV="development"

# Admin Endpoint (Development only - for making users admin)
# WARNING: Only works in development mode (NODE_ENV !== 'production')
ADMIN_SECRET_KEY="your-secure-admin-secret-key"

# Frontend
FRONTEND_URL="http://localhost:3000"
