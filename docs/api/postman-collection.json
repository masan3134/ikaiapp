        {
          "name": "Login (ADMIN)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Auto-save token to collection variable",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "    console.log('‚úÖ Token saved:', response.token.substring(0, 20) + '...');",
                  "    console.log('‚úÖ User:', response.user.email, '| Role:', response.user.role);",
                  "} else {",
                  "    console.error('‚ùå Login failed');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test-admin@test-org-1.com\",\n  \"password\": \"TestPass123!\"\n}"
